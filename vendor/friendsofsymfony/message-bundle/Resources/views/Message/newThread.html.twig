{% block fos_content %}


    <h2><b>{% trans from 'FOSMessageBundle' %}send_new{% endtrans %}</b></h2>

    {{form_start(form, {'method': 'post', 'action':path('fos_message_thread_new')})}}
       <div class="row">
    <div class="col-md-6"> 
  <div class="form-group has-success">
    <div class="input-group input-icon">
     <span class="input-group-addon">
     <i class="fa fa-user font-green"></i>
       </span>
