    <div class="input-group input-icon">
     <span class="input-group-addon">
     <i class="fa fa-envelope font-purple"></i>
     </span>
    {{form_errors(form.body)}}
     {{ form_widget(form.body,{'attr':{'class':'form-control placeholder-no-fix','placeholder': "contenu du message"}}) }}</div></div></div></div>
       <div class="row">
         <div class="col-xs-3">
         <input type="submit"  class="btn btn-primary" value="envoyer"/></div>
           <div class="col-xs-3">
         <input type="reset"  class="btn btn-danger" value="cancel"/></div>

</div>
     {{form_end(form)}}
  
